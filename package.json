{
  "name": "dktp",
  "version": "0.0.0-development",
  "description": "A simple cli to interact with Azure ContainerApps with arm/yaml templates",
  "keywords": [
    "containerapp",
    "arm",
    "yaml",
    "azure"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nutgaard/dktp"
  },
  "main": "./lib/index.js",
  "bin": {
    "dktp": "dktp"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "Nicklas Utgaard",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "commit": "git-cz",
    "build": "bun build src/index --outfile ./lib/index.mjs --target bun"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/yargs": "^17.0.32",
    "@vitest/coverage-v8": "^1.6.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.0.0",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "yaml": "^2.4.2",
    "yargs": "^17.7.2"
  },
  "lint-staged": {
    "*.{ts,js}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
